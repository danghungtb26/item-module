{
    "name": "server",
    "version": "1.0.0",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "webpack --config webpack.production.ts",
        "start:s": "node dist/index.js",
        "start": "nodemon",
        "dev:ts": "nodemon",
        "watch:src": "webpack --config webpack.development.ts",
        "watch:dist": "nodemon ./dist/main.js",
        "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
        "build:db:ts": "rm -rf db && tsc --project src/db/tsconfig.build.json --outDir db",
        "build:db": "rm -rf db && webpack --config webpack.sequelize.ts",
        "reset": "sequelize-cli db:migrate:undo:all && sequelize-cli db:migrate && sequelize-cli db:seed:all",
        "reset:db": "yarn build:db && sequelize-cli db:migrate:undo:all && sequelize-cli db:migrate && sequelize-cli db:seed:all",
        "reset:db:ts": "yarn build:db:ts && sequelize-cli db:migrate:undo:all && sequelize-cli db:migrate && sequelize-cli db:seed:all"
    },
    "dependencies": {
        "body-parser": "^1.20.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "glob": "^8.0.3",
        "inversify": "^6.0.1",
        "lodash": "^4.17.21",
        "pg": "^8.7.3",
        "reflect-metadata": "^0.1.13",
        "sequelize": "^6.20.1",
        "sequelize-typescript": "^2.1.3"
    },
    "moduleNameMapper": {
        "@constants/(.*)": "./src/constants/$1"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.2.0",
        "@types/express": "^4.17.13",
        "@types/faker": "^6.6.9",
        "@types/lodash": "^4.14.182",
        "@types/node": "^17.0.40",
        "@types/webpack-node-externals": "^2.5.3",
        "clean-webpack-plugin": "^4.0.0",
        "concurrently": "^7.2.1",
        "faker": "^6.6.6",
        "nodemon": "^2.0.16",
        "sequelize-cli": "^6.4.1",
        "ts-loader": "^9.3.0",
        "ts-node": "^10.8.1",
        "tsconfig-paths": "^4.0.0",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^4.9.2",
        "webpack-merge": "^5.8.0",
        "webpack-node-externals": "^3.0.0"
    }
}
